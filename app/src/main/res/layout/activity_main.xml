<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="matrix.wallpaperchanger.MainActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/IVdisplay"
        android:contentDescription="@null"
        android:src="@drawable/a1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center" />
    <Button
        android:id="@+id/WallPaperButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text= "@string/setImage"/>
    
    <HorizontalScrollView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



    <ImageView
        android:id="@+id/IVimage1"
        android:contentDescription="@null"
        android:src="@drawable/a1"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:padding="15dp" />
    <ImageView
        android:id="@+id/IVimage2"
        android:contentDescription="@null"
        android:src="@drawable/a2"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:padding="15dp" />
    <ImageView
        android:id="@+id/IVimage3"
        android:contentDescription="@null"
        android:src="@drawable/a3"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:padding="15dp" />
    <ImageView
        android:id="@+id/IVimage4"
        android:contentDescription="@null"
        android:src="@drawable/a4"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:padding="15dp" />
    <ImageView
        android:id="@+id/IVimage5"
        android:contentDescription="@null"
        android:src="@drawable/a5"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:padding="15dp" />
    <ImageView
        android:id="@+id/IVimage6"
        android:contentDescription="@null"
        android:src="@drawable/a6"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:padding="15dp" />
    <ImageView
        android:id="@+id/IVimage7"
        android:contentDescription="@null"
        android:src="@drawable/a7"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:padding="15dp" />

        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>
